<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark Mode -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <solid android:color="#FF9800"/> <!-- Dark mode background color when pressed -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <solid android:color="#FFEB3B"/> <!-- Dark mode background color when focused -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <solid android:color="@color/dark_button_background"/> <!-- Dark mode default background color -->
        </shape>
    </item>

    <!-- Light Mode -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <solid android:color="@color/colorPrimaryDark"/> <!-- Background color when pressed -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <solid android:color="@color/colorPrimaryLight"/> <!-- Background color when focused -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <solid android:color="@color/colorPrimary"/> <!-- Default background color -->
        </shape>
    </item>
</selector>